@model assignment.Models.itemModel
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="UpdateProduct" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="itemId" />
  <input type="hidden" asp-for="userID" />

    <div class="form-group">
        <label asp-for="itemName"></label>
        <input asp-for="itemName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="itemCategory"></label>
        <input asp-for="itemCategory" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="itemDesc"></label>
        <textarea asp-for="itemDesc" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="itemPrice"></label>
        <input asp-for="itemPrice" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="productionDate"></label>
        <input asp-for="productionDate" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.imgUrl))
    {
        <div class="form-group">
            <label>Current Image</label><br />
            <img src="@Model.imgUrl" class="img-thumbnail" style="max-width:200px;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="listProducts" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
