@{
    ViewData["Title"] = "AgriEnergy - Home";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header class="custom-header">
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgriEnergy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"></ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <section class="landing-page d-flex">
        <!-- Carousel -->
        <div id="agriEnergyCarousel" class="carousel slide col-md-6" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/assets/plug.jpg" style="width:600px; height:600px; object-fit:cover; margin: 0 auto;"
                        alt="Green Energy">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/farmers.png" style="width:600px; height:600px; object-fit:cover; margin: 0 auto;"
                        alt="Farmers Collaborating">
                </div>
                <div class="carousel-item">
                    <img src="~/assets/GREEN_ENERGY.jpg"
                        style="width:600px; height:600px; object-fit:cover; margin: 0 auto;" alt="Sustainable Future">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#agriEnergyCarousel"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#agriEnergyCarousel"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Text Content -->
        <div class="col-md-6 text-content">
            <h1>Welcome to AgriEnergy</h1>
            <p>At AgriEnergy, we aim to connect farmers with individuals and businesses dedicated to creating a greener,
                more sustainable future. Join our network of eco-conscious professionals to exchange resources, ideas,
                and initiatives that support green energy solutions for agriculture.</p>
            <h4>Our Mission:</h4>
            <p>Empowering farmers to adopt green technologies and connect with green energy enthusiasts. Together, we
                can create a brighter, more sustainable future for agriculture.</p>
            <button class="btn btn-lg btn-dark">Join Us Today</button>
        </div>
    </section>

    <footer class="custom-footer">
        <p>&copy; 2025 AgriEnergy. All rights reserved.</p>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap Bundle -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
