@{
    ViewData["Title"] = "AgriEnergy – Home";
    Layout = "_Layout";
}

<section class="landing-page d-flex align-items-center gap-4 p-4">
  <!-- Carousel -->
  <div id="agriEnergyCarousel" class="carousel slide col-md-6" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="~/assets/plug.jpg" class="d-block w-100 carousel-img" alt="Green Energy">
      </div>
      <div class="carousel-item">
        <img src="~/assets/farmers.png" class="d-block w-100 carousel-img" alt="Farmers Collaborating">
      </div>
      <div class="carousel-item">
        <img src="~/assets/GREEN_ENERGY.jpg" class="d-block w-100 carousel-img" alt="Sustainable Future">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#agriEnergyCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#agriEnergyCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Text Content -->
  <div class="col-md-6 text-content">
    <h1>Welcome to AgriEnergy</h1>
    <p>At AgriEnergy, we aim to connect farmers with individuals and businesses dedicated to creating a greener, more sustainable future. Join our network of eco-conscious professionals to exchange resources, ideas, and initiatives that support green energy solutions for agriculture.</p>
    <h4>Our Mission:</h4>
    <p>Empowering farmers to adopt green technologies and connect with green energy enthusiasts. Together, we can create a brighter, more sustainable future for agriculture.</p>
    <div class="d-flex gap-2 mt-3">
      <a class="btn btn-lg btn-dark" asp-area="" asp-controller="Home" asp-action="Index">Join Us Today</a>
      <a href="#" class="btn btn-lg btn-outline-secondary">About</a>
      <a href="#" class="btn btn-lg btn-outline-secondary">Contact Us</a>
    </div>
  </div>
</section>

<style>
  /* Ensure all carousel images are the same height with cover */
  .carousel-img {
    height: 400px;
    object-fit: cover;
  }
</style>
